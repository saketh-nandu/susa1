# 25-30: OOP
PRINT "Object-Oriented Programming:"

CLASS Counter: START:
    FUNC __init__(self, initial = 0): START:
        self.value = initial
    END:
    
    FUNC increment(self): START:
        self.value = self.value + 1
    END:
    
    FUNC get_value(self): START:
        RETURN self.value
    END:
END:

let counter = Counter(10)
counter.increment()
counter.increment()
PRINT "Counter value: " + str(counter.get_value())
PRINT ""

