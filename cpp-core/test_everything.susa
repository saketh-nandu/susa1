# 33-34: Generators & Async
PRINT "Generators:"

FUNC fibonacci(n): START:
    let a = 0
    let b = 1
    let i = 0
    LOOP WHILE i < n: START:
        YIELD a
        let temp = a
        a = b
        b = temp + b
        i = i + 1
    END:
END:

PRINT "Fibonacci sequence:"
let fib_gen = fibonacci(8)
FOR num IN fib_gen: START:
    PRINT "  " + str(num)
END:
PRINT ""

PRINT "Async/Await:"

ASYNC FUNC async_task(id): START:
    PRINT "Task " + str(id) + " running"
    RETURN "Task " + str(id) + " done"
END:

ASYNC FUNC run_async(): START:
    let r1 = AWAIT async_task(1)
    let r2 = AWAIT async_task(2)
    PRINT r1
    PRINT r2
END:

run_async()
PRINT ""

