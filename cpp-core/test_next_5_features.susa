# Bonus: Combining all features
PRINT "\n6. Combining Multiple Features"

string playerName = "Bob"
int playerScore = 0
int round = 1

DO: START:
    PRINT rt"\n--- Round {round} ---"
    
    SWITCH round: START:
    CASE 1:
        playerScore += 10
    CASE 2:
        playerScore += 20
    CASE 3:
        playerScore += 30
    DEFAULT:
        playerScore += 5
    END:
    
    let status = playerScore > 50 ? "Winning!" : "Keep going!"
    PRINT rt"{playerName}: {playerScore} points - {status}"
    
    round++
END: WHILE round <= 3

PRINT rt"\nFinal Score: {playerScore}"

