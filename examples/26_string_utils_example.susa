# Test 5: Replace All
PRINT "\n5. Testing Replace All..."
let text5 = "Hello World, Hello Universe"
let replaced = string_utils.replace_all(text5, "Hello", "Hi")
PRINT "Original: " + text5
PRINT "Replaced: " + replaced

# Test 6: Contains, Starts With, Ends With
PRINT "\n6. Testing Contains, Starts With, Ends With..."
let text6 = "SUSA Programming Language"
let has_prog = string_utils.contains(text6, "Programming")
PRINT "Contains 'Programming': " + str(has_prog)
let starts = string_utils.starts_with(text6, "SUSA")
PRINT "Starts with 'SUSA': " + str(starts)
let ends = string_utils.ends_with(text6, "Language")
PRINT "Ends with 'Language': " + str(ends)

# Test 7: To Upper and To Lower
PRINT "\n7. Testing To Upper and To Lower..."
let text7 = "Hello World"
let upper = string_utils.to_upper(text7)
let lower = string_utils.to_lower(text7)
PRINT "Original: " + text7
PRINT "Upper: " + upper
PRINT "Lower: " + lower

# Test 8: Count Occurrences
PRINT "\n8. Testing Count Occurrences..."
let text8 = "banana"
let count = string_utils.count_occurrences(text8, "a")
PRINT "Text: " + text8
PRINT "Count of 'a': " + str(count)

